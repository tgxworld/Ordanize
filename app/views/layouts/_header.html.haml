.fixed
  %nav.top-bar{ role: 'navigation', data: { topbar: '' } }
    %ul.title-area
      %li.name
        %h1
          = link_to 'Ordanize', root_path

      %li.toggle-topbar.menu-icon
        = link_to '#' do
          %span Menu

    .top-bar-section
      %ul.right
        %li
          = link_to 'Home', root_path
        %li
          = link_to 'Pricing', pricing_path

        - if current_user
          %li
            = link_to t('dashboard'), dashboard_user_path(current_user)

          %li
            = link_to t('log_out'), destroy_user_session_path, method: :delete
        - else
          %li
            = link_to t('log_in'), new_user_session_path
